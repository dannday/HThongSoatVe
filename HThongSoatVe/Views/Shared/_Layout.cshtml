<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Logo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">


                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Chương Trình</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="~/ChuongTrinh/TieuDiem">Tiêu Điểm</a></li>
                            <li><a class="dropdown-item" href="~/ChuongTrinh/LichDien">Lịch Diễn</a></li>
                            <li><a class="dropdown-item" href="~/ChuongTrinh/CongDong">Cộng Đồng</a></li>
                            <li><a class="dropdown-item" href="~/ChuongTrinh/NgheSi">Nghệ Sĩ</a></li>

                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Tin Tức</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Cá Nhân</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Thông Tin</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Vé Festival Huế 2020</a></li>
                            <li><a class="dropdown-item" href="#">Đi Lại</a></li>
                            <li><a class="dropdown-item" href="#">Điện Thoại & Internet</a></li>
                            <li><a class="dropdown-item" href="#">Tài Trợ</a></li>
                            <li><a class="dropdown-item" href="#">Nhóm Phát Triển</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
