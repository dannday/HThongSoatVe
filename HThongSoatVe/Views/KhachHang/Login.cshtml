
@{
    ViewBag.Title = "Đăng Nhập  ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="style.css">
    <title> CSS Login Screen Tutorial </title>

    <link href="~/Assets/login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-page">
        <div class="form">
            <div class="login">
                <div class="login-header">
                    <h3>LOGIN</h3>
                </div>
            </div>
            <form class="login-form" method="post">
                <h4 style="color: palegreen; background: #eee; text-align: center;line-height:33px">@ViewBag.ThongBaoKH</h4>


                <input type="text" placeholder="Username" name="form-username" class="form-username form-control" required id="form-username" />
                <input type="password" name="form-password" placeholder="Password..." class="form-password form-control" required id="form-password" />
                <button>login</button>
                <p class="message">Not registered? <a href="#">Create an account</a></p>
            </form>
        </div>
    </div>
</body>
</html>

